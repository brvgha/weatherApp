
<table class="table is-fullwidth">
    <thead>
        <tr>
            <th> Code </th>
            <th> Temp </th>
            <th> Wind Speed </th>
            <th> Wind Direction </th>
            <th> Pressure </th>
        </tr>
    </thead>
    <tbody>
        {{#each station.readings}}
        <tr>
            <td> {{code}} </td>
            <td> <span>{{temperature}}&degC</span>
                <span>{{temperatureF}}&degF</span>
            </td>
            <td> {{windSpeedBft}}bft </td>
            <td> {{windDirection}}&deg </td>
            <td> {{pressure}}kPa </td>
          <td>
            <a href="/station/{{station_id}}/deleteReading/{{_id}}" class="button">
              {{>icons/delete}}
            </a>
          </td>
        </tr>
        {{/each}}
    </tbody>
</table>
